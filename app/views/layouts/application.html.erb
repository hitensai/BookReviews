<!DOCTYPE html>
<html>
  <head>
    <title>BookReviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <nav class="nav navbar-default">
      <div class="container" style="width: 1680px;">
        <div class="navbar-header">
         <%= link_to "Books Review", root_path, class: "navbar-brand" %>
          
        </div>
        <ul class="nav navbar-nav">

          <li> <%= link_to "sign_up", new_user_registration_path %> </li>
          <% if user_signed_in? %>
          <li> <%= link_to "sign_out", destroy_user_session_path, method: :delete %> </li>
          <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
           <% end %>
          
        </ul>


        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
                 <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="font-size: 20px;"> Categories<span class="caret"></span></a>
                 <ul class="dropdown-menu" role="menu">
                  <% Category.all.each do |c| %>

                  <li>
                    <%= link_to c.name, books_path(category: c.name), class: "link" %>
                  </li>
                  <% end %>
                   
                 </ul>
                 
                </li>
           <% if user_signed_in? %>
               <%= link_to 'Add Book', new_book_path, class: "navbar-brand" %>
           <% end %>

        </ul>

      </div>
      
    </nav>

    <%= yield %>
  </body>
</html>
