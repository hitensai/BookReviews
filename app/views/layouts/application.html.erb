<!DOCTYPE html>
<html>
  <head>
    <title>BookReviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <nav class="nav navbar-default">
      <div class="container">
        <div class="navbar-header">
         <%= link_to "Books Review", root_path, class: "navbar-brand" %>
         <%= link_to 'Add Book', new_book_path, class: "navbar-brand" %>
          
        </div>
        <ul class="nav navbar-nav">

          <li> <%= link_to "sign_up", new_user_registration_path %> </li>
          <% if user_signed_in? %>
          <li> <%= link_to "sign_out", destroy_user_session_path, method: :delete %> </li>
          <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
           <% end %>
          
        </ul>

      </div>
      
    </nav>

    <%= yield %>
  </body>
</html>
