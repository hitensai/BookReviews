<div class="container" style="width: 1680px;">

<p id="notice"><%= notice %></p>

<h1 class="current-category"><%= params[:category] %> Books</h1>
<% if @books.count == 0 %>
  <h1>There are no books currently in this Category</h1>
  <% else %>  

<div class="row">
    <% @books.each do |book| %>
    <div class="col-md-3">
    <a href="/books/<%=book.id %>">
	<%=image_tag book.book_img.url(:book_index), class: "book" %>
</a> 
</div>
      <% end %>
    <% end %>
    </div>


</div>

